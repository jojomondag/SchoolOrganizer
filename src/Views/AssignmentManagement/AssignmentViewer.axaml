<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SchoolOrganizer.Src.ViewModels"
        xmlns:local="using:SchoolOrganizer.Src.Views.AssignmentManagement"
        xmlns:materialIcons="using:Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="SchoolOrganizer.Src.Views.AssignmentManagement.AssignmentViewer"
        x:DataType="vm:StudentDetailViewModel"
        Title="{Binding WindowTitle}"
        Width="1000" Height="600"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen">

  <Design.DataContext>
    <vm:StudentDetailViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    <!-- Header Bar with Attach to Main Window Button -->
    <Border Grid.Row="0" 
            Background="{DynamicResource HeaderBackgroundBrush}"
            BorderBrush="{DynamicResource CardBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="16,10">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Student Name and Info -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
          <materialIcons:MaterialIcon Kind="AccountCircle" Width="24" Height="24" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
          <StackPanel>
            <TextBlock Text="{Binding StudentName}" 
                      FontWeight="Bold" 
                      FontSize="16"
                      Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text="{Binding CourseName}" 
                      FontSize="12"
                      Foreground="{DynamicResource TextSecondaryBrush}"/>
          </StackPanel>
        </StackPanel>

        <!-- Attach Button -->
        <Button Grid.Column="1" 
                Click="OnAttachClick"
                Padding="12,6"
                ToolTip.Tip="Attach to main window">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <materialIcons:MaterialIcon Kind="DockWindow" Width="18" Height="18"/>
            <TextBlock Text="Attach to Main Window" VerticalAlignment="Center"/>
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Assignment View Control -->
    <local:AssignmentViewControl Grid.Row="1" x:Name="AssignmentControl"/>
  </Grid>
</Window>
