<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SchoolOrganizer.Src.ViewModels"
        xmlns:views="using:SchoolOrganizer.Src.Views"
        xmlns:studentGallery="using:SchoolOrganizer.Src.Views.StudentGallery"
        xmlns:classroomDownload="using:SchoolOrganizer.Src.Views.ClassroomDownload"
        xmlns:assignmentManagement="using:SchoolOrganizer.Src.Views.AssignmentManagement"
        xmlns:materialIcons="using:Material.Icons.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SchoolOrganizer.Src.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Title="School Organizer"
        Width="2390"
        Height="900"
        MinWidth="800"
        MinHeight="600">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

        <Window.Styles>
        <Style Selector="ComboBox:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource TextSecondaryColor}"/>
        </Style>
        <Style Selector="DatePicker:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource TextSecondaryColor}"/>
        </Style>
    </Window.Styles>

    <SplitView IsPaneOpen="{Binding IsMenuOpen}" 
               DisplayMode="CompactInline" 
               OpenPaneLength="200" 
               CompactPaneLength="56">
        <SplitView.Pane>
            <!-- Navigation Menu -->
            <Border Background="{DynamicResource BackgroundSecondaryColor}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- Navigation items -->
                        <RowDefinition Height="Auto"/> <!-- Profile at bottom -->
                    </Grid.RowDefinitions>

                    <!-- Header with hamburger button and title -->
                    <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="16,10,16,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Hamburger Menu Button -->
                            <Button Grid.Column="0" Command="{Binding ToggleMenuCommand}" 
                                    Width="32" Height="32" Margin="0,0,8,0"
                                    Background="Transparent" BorderThickness="0">
                                <materialIcons:MaterialIcon Kind="Menu" Width="20" Height="20"/>
                            </Button>

                            <!-- App Title (when menu is open) -->
                            <TextBlock Grid.Column="1" Text="School Organizer" 
                                      VerticalAlignment="Center" FontWeight="Bold"
                                      IsVisible="{Binding IsMenuOpen}"/>
                        </Grid>
                    </Border>

                    <!-- Navigation Items -->
                    <StackPanel Grid.Row="1" Margin="8,16,8,8" Spacing="4">
                        <!-- Normal Navigation (when not in add student mode or assignment view) -->
                        <StackPanel>
                            <StackPanel.IsVisible>
                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                    <Binding Path="!IsAddStudentMode"/>
                                    <Binding Path="!IsAssignmentViewActive"/>
                                </MultiBinding>
                            </StackPanel.IsVisible>
                            
                            <!-- Student Gallery -->
                            <Button Command="{Binding NavigateToStudentGalleryCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Padding="12,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="4">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <materialIcons:MaterialIcon Kind="AccountGroupOutline" Width="20" Height="20"/>
                                        <TextBlock Text="Student Gallery" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!-- Add Student -->
                            <Button Command="{Binding AddStudentCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Padding="12,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="4"
                                    IsVisible="{Binding IsStudentGalleryActive}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <materialIcons:MaterialIcon Kind="AccountPlus" Width="20" Height="20"/>
                                        <TextBlock Text="Add Student" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!-- View Assignments -->
                            <Button Command="{Binding NavigateToAssignmentsCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Padding="12,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="4">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <materialIcons:MaterialIcon Kind="FileDocumentMultiple" Width="20" Height="20"/>
                                        <TextBlock Text="View Assignments" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!-- Classroom Downloads -->
                            <Button Command="{Binding NavigateToClassroomDownloadCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Padding="12,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="4">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <materialIcons:MaterialIcon Kind="Download" Width="20" Height="20"/>
                                        <TextBlock Text="Classroom Downloads" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <!-- Assignment Navigation (when viewing assignments) -->
                        <ScrollViewer IsVisible="{Binding IsAssignmentViewActive}" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="4">
                                <!-- Back Button -->
                                <Button Command="{Binding NavigateToStudentGalleryCommand}"
                                        HorizontalAlignment="Stretch" 
                                        HorizontalContentAlignment="Left"
                                        Padding="12,8"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="4"
                                        Margin="0,0,0,8">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <materialIcons:MaterialIcon Kind="ArrowLeft" Width="20" Height="20"/>
                                            <TextBlock Text="Back to Gallery" VerticalAlignment="Center" 
                                                      IsVisible="{Binding IsMenuOpen}"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!-- Assignments Section Header -->
                                <TextBlock Text="Assignments" 
                                          FontWeight="Bold" 
                                          FontSize="12" 
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          Margin="12,8,0,8"
                                          IsVisible="{Binding IsMenuOpen}"/>

                                <!-- Dynamic Assignment Items -->
                                <ItemsControl ItemsSource="{Binding AssignmentViewModel.AllFilesGrouped}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button HorizontalAlignment="Stretch" 
                                                    HorizontalContentAlignment="Left"
                                                    Padding="12,8"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ScrollToAssignmentCommand}"
                                                    CommandParameter="{Binding AssignmentName}">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                                        <materialIcons:MaterialIcon Kind="FileDocument" Width="20" Height="20"/>
                                                        <TextBlock Text="{Binding AssignmentName}" 
                                                                  VerticalAlignment="Center" 
                                                                  TextTrimming="CharacterEllipsis"
                                                                  IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).IsMenuOpen}"/>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Add Student Navigation (when in add student mode) -->
                        <StackPanel IsVisible="{Binding IsAddStudentMode}">
                            <!-- From Classroom -->
                            <Button Command="{Binding NavigateToClassroomImportCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Padding="12,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="4">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <materialIcons:MaterialIcon Kind="GoogleClassroom" Width="20" Height="20"/>
                                        <TextBlock Text="From Classroom" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Profile/Login at Bottom -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0" Padding="8">
                        <StackPanel Spacing="4">
                            <!-- Profile Picture Button (Logout when authenticated) -->
                            <Button Command="{Binding LogoutCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Stretch"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="0"
                                    IsVisible="{Binding IsAuthenticated}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border CornerRadius="20" ClipToBounds="True" Width="40" Height="40">
                                            <Image Source="{Binding ProfileImage}" Stretch="UniformToFill" Width="40" Height="40" IsHitTestVisible="False"/>
                                        </Border>
                                        <TextBlock Text="{Binding TeacherName}" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                                <ToolTip.Tip>
                                    <ToolTip Content="Log out" />
                                </ToolTip.Tip>
                            </Button>

                            <!-- Login Button (when not authenticated) -->
                            <Button Command="{Binding LoginCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Stretch"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="0"
                                    IsVisible="{Binding !IsAuthenticated}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border CornerRadius="8" ClipToBounds="True" Width="40" Height="40" Background="{DynamicResource BackgroundTertiaryBrush}">
                                            <Image Source="{SvgImage avares://SchoolOrganizer/Assets/ClassroomIcon.svg}" Width="40" Height="40" Stretch="Uniform" IsHitTestVisible="False"/>
                                        </Border>
                                        <TextBlock Text="Login" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                                <ToolTip.Tip>
                                    <ToolTip Content="Login with Google to access your profile" />
                                </ToolTip.Tip>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </SplitView.Pane>

        <SplitView.Content>
            <!-- Main Content Area -->
            <Border Background="White">
            <ContentControl Content="{Binding CurrentViewModel}">
                <ContentControl.DataTemplates>
                <!-- Template for StudentGalleryViewModel -->
                    <DataTemplate DataType="vm:StudentGalleryViewModel">
                        <studentGallery:StudentGalleryView/>
                    </DataTemplate>

                <!-- Template for ClassroomDownloadViewModel -->
                    <DataTemplate DataType="vm:ClassroomDownloadViewModel">
                        <classroomDownload:ClassroomDownloadView/>
                    </DataTemplate>

                <!-- Template for StudentDetailViewModel (Embedded Assignment View) -->
                    <DataTemplate DataType="vm:StudentDetailViewModel">
                        <assignmentManagement:EmbeddedAssignmentView/>
                    </DataTemplate>

                </ContentControl.DataTemplates>
            </ContentControl>
            </Border>
        </SplitView.Content>
    </SplitView>

</Window>
