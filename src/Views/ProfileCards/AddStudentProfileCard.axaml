<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolOrganizer.Src.Views.ProfileCards"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             xmlns:components="using:SchoolOrganizer.Src.Views.ProfileCards.Components"
             x:Class="SchoolOrganizer.Src.Views.ProfileCards.AddStudentProfileCard"
             x:DataType="local:AddStudentProfileCard"
             x:Name="Root">

  <Grid x:Name="MainGrid" ClipToBounds="False">
    <Border x:Name="CardBorder"
            Background="{DynamicResource BackgroundPrimaryBrush}"
            BorderBrush="{DynamicResource BlackBrush}"
            BorderThickness="0.5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Cursor="Hand"
            BoxShadow="{DynamicResource ShadowLight}"
            RenderTransformOrigin="0.5,0.5">

      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Plus Icon Circle -->
        <components:ProfileImage x:Name="AddIconBorder"
                                        BorderThickness="2"
                                        Margin="0,0,0,12"
                                        ImagePath=""
                                        PlaceholderIconKind="Plus"
                                        PlaceholderIconSize="30"
                                        ImageClicked="OnAddStudentClicked"/>

        <!-- Add Student Text -->
        <TextBlock x:Name="AddStudentText"
                   Text="Add Student"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   TextAlignment="Center"
                   Margin="0,0,0,8"
                   TextTrimming="CharacterEllipsis" />

        <!-- Subtitle Text -->
        <TextBlock x:Name="SubtitleText"
                   Foreground="{DynamicResource TextSecondaryBrush}"
                   TextAlignment="Center"
                   TextTrimming="CharacterEllipsis" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
