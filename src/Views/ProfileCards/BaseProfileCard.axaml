<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolOrganizer.Src.Views.ProfileCards"
             x:DataType="local:BaseProfileCard">

  <!-- This is a base template that can be overridden by derived classes -->
  <Border
          Background="{DynamicResource BackgroundPrimaryBrush}"
          CornerRadius="16"
          BoxShadow="{DynamicResource ShadowLight}"
          BorderBrush="{DynamicResource BlackBrush}"
          BorderThickness="1"
          Cursor="Hand"
          RenderTransformOrigin="0.5,0.5">

    <!-- Default content - can be overridden by derived classes -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
      <Ellipse
           Width="90" Height="90"
           Fill="{DynamicResource BackgroundTertiaryBrush}"
           Stroke="{DynamicResource BlackBrush}"
           StrokeThickness="2"
           Margin="0,0,0,12" />

      <TextBlock
                 Text="{Binding Name, FallbackValue=''}"
                 FontSize="20"
                 Foreground="{DynamicResource TextPrimaryBrush}"
                 TextAlignment="Center"
                 Margin="0,0,0,8"
                 TextTrimming="CharacterEllipsis" />
    </StackPanel>
  </Border>
</UserControl>
