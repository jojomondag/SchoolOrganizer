<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:models="using:SchoolOrganizer.Src.Models.Assignments"
             x:Class="SchoolOrganizer.Src.Views.Components.GoogleDocsViewer"
             x:DataType="models:StudentFile">

  <Border Background="{DynamicResource BackgroundSecondaryBrush}"
          BorderBrush="{DynamicResource CardBorderBrush}"
          BorderThickness="1"
          CornerRadius="4"
          Padding="12">
    <!-- Content Area -->
    <Border Background="{DynamicResource BackgroundTertiaryBrush}"
            BorderBrush="{DynamicResource CardBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            MinHeight="400">
      <Grid>
          <!-- Downloaded File View -->
          <Border>
            <Grid RowDefinitions="Auto,*,Auto">
              <!-- Header -->
              <StackPanel Grid.Row="0" Margin="12" Spacing="8">
                <TextBlock Text="Downloaded File Preview"
                           FontWeight="SemiBold"
                           FontSize="14"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding FileName}"
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
              </StackPanel>

              <!-- Preview Content -->
              <ScrollViewer Grid.Row="1"
                           VerticalScrollBarVisibility="Auto"
                           HorizontalScrollBarVisibility="Auto"
                           MaxHeight="500"
                           Margin="12,0">
                <Border Background="{DynamicResource BackgroundPrimaryBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="20"
                        MinHeight="300">
                  <StackPanel x:Name="DocumentPreviewContainer"
                              Spacing="12">
                    <!-- Document content will be dynamically added here -->
                    <TextBlock Text="Loading document preview..."
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontStyle="Italic"/>
                  </StackPanel>
                </Border>
              </ScrollViewer>

              <!-- Footer -->
              <StackPanel Grid.Row="2" Margin="12" Spacing="8">
                <TextBlock Text="For full formatting and features, use the Google Drive button to open in browser"
                           FontSize="11"
                           FontStyle="Italic"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
              </StackPanel>
            </Grid>
          </Border>
        </Grid>
      </Border>
  </Border>
</UserControl>
