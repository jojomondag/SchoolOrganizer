<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SchoolOrganizer.Src.Views.Windows.ImageCrop.ConsolidatedImageCropWindow"
        Width="1000" Height="700"
        MinWidth="600" MinHeight="520"
        Title="Crop Profile Image"
        Background="{DynamicResource BackgroundTertiaryBrush}">

    <Window.Styles>
        <!-- Button styles -->
        <Style Selector="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{DynamicResource BlackBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BlackBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Icon button style -->
        <Style Selector="Button.IconButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="Button.IconButton:pointerover">
            <Setter Property="Background" Value="{DynamicResource BackgroundTertiaryBrush}"/>
        </Style>

        <!-- Handle style -->
        <Style Selector="Border.Handle">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Background" Value="{DynamicResource WhiteColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WhiteColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Styles>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Image Area -->
        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                Name="ImageArea"
                BorderBrush="{DynamicResource BlackBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Background="{DynamicResource WhiteBrush}"
                Cursor="Hand">
            <Grid Name="ImageContainer">
                <Grid.Clip>
                    <RectangleGeometry RadiusX="8" RadiusY="8"/>
                </Grid.Clip>

                <!-- Background when no image -->
                <Grid Name="BackgroundPattern" IsVisible="True">
                    <TextBlock Text="Click to select an image"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Image display -->
                <Image Name="MainImage"
                       Stretch="UniformToFill"
                       IsVisible="False"/>

                <!-- Crop overlay -->
                <Grid Name="CropOverlay" IsVisible="False">
                    <!-- Dark overlay with circular cutout -->
                    <Path Name="OverlayCutout"
                          Fill="{DynamicResource BlackBrush}"
                          Opacity="0.4"/>

                    <!-- Crop selection circle -->
                    <Grid Name="SelectionGroup" Width="200" Height="200">
                        <Border Name="CropSelection"
                                BorderBrush="{DynamicResource WhiteBrush}"
                                BorderThickness="3"
                                Background="Transparent"
                                CornerRadius="100"
                                Cursor="SizeAll"
                                Margin="-10" Padding="10"/>
                        
                        <Canvas Name="HandlesLayer">
                            <Border Name="HandleTopLeft" Classes="Handle"/>
                            <Border Name="HandleTopRight" Classes="Handle"/>
                            <Border Name="HandleBottomLeft" Classes="Handle"/>
                            <Border Name="HandleBottomRight" Classes="Handle"/>
                        </Canvas>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="10">
            <!-- Preview -->
            <Border Background="{DynamicResource BackgroundSecondaryBrush}"
                    BorderBrush="{DynamicResource CardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="Preview" FontWeight="SemiBold" FontSize="14"/>
                    
                    <!-- Preview Circle -->
                    <Border Name="PreviewImageBorder"
                            Width="120" Height="120"
                            BorderThickness="3"
                            CornerRadius="60"
                            Background="{DynamicResource BackgroundTertiaryBrush}"
                            BorderBrush="{DynamicResource BlackBrush}"
                            HorizontalAlignment="Center">
                        <Image Name="PreviewImage" Stretch="UniformToFill"/>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <StackPanel Name="ActionButtonsPanel" 
                                Orientation="Horizontal" 
                                Spacing="8" 
                                HorizontalAlignment="Center"
                                IsVisible="False">
                        <Button Classes="IconButton" ToolTip.Tip="Cancel" Click="OnBackClick">
                            <TextBlock Text="×" FontSize="20" HorizontalAlignment="Center"/>
                        </Button>
                        <Button Name="ResetButton" Classes="IconButton" IsEnabled="False" ToolTip.Tip="Reset" Click="OnResetClick">
                            <TextBlock Text="↻" FontSize="16" HorizontalAlignment="Center"/>
                        </Button>
                        <Button Name="SaveButton" Classes="IconButton" IsEnabled="False" ToolTip.Tip="Save" Click="OnSaveClick">
                            <TextBlock Text="✓" FontSize="16" HorizontalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Image History -->
            <Border Background="{DynamicResource BackgroundSecondaryBrush}"
                    BorderBrush="{DynamicResource CardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="Recent Images" FontWeight="SemiBold" FontSize="14"/>
                    
                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <Grid Name="ImageGalleryGrid" 
                              ColumnDefinitions="*,*"
                              RowSpacing="6"
                              ColumnSpacing="6"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Bottom Controls -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,20,0,0">
            <Button Name="SelectButton" Content="Select Image" Classes="secondary"/>
            <Button Name="CancelButton" Content="Cancel" Classes="secondary"/>
        </StackPanel>
    </Grid>
</Window>
