<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors (7 core colors only) -->
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="BlackColor">#000000</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#b0bec5</Color>
    <Color x:Key="BackgroundPrimaryColor">#1a1a1a</Color>
    <Color x:Key="BackgroundSecondaryColor">#2d2d30</Color>
    <Color x:Key="BackgroundTertiaryColor">#252526</Color>
    
    <!-- Derived colors using only the 7 core colors -->
    <Color x:Key="CardBorderColor">#30FFFFFF</Color>
    <Color x:Key="HeaderBackgroundColor">#2d2d30</Color>
    <Color x:Key="ContentBackgroundColor">#1a1a1a</Color>

    <!-- Dark Theme Brushes (using only 7 core colors) -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiaryColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorderColor}" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource ContentBackgroundColor}" />
    <SolidColorBrush x:Key="IconBrush" Color="{StaticResource TextSecondaryColor}" />

    <!-- Card Shadows for Dark Theme -->
    <BoxShadows x:Key="CardBoxShadows">0 2 8 0 #50000000, 0 4 16 0 #40000000</BoxShadows>
    <BoxShadows x:Key="CardBoxShadowsHover">0 4 12 0 #60000000, 0 8 24 0 #50000000</BoxShadows>
    <BoxShadows x:Key="ShadowLight">0 2 6 0 #40000000</BoxShadows>
    <BoxShadows x:Key="ShadowStrong">0 4 12 0 #60000000, 0 8 24 0 #50000000</BoxShadows>

    <!-- ImageCropper Brushes (only used ones) -->
    <SolidColorBrush x:Key="ImageCropperPreviewBackgroundBrush" Color="{StaticResource BackgroundTertiaryColor}" />
    <SolidColorBrush x:Key="ImageCropperThumbnailBorderBrush" Color="{StaticResource CardBorderColor}" />
    <SolidColorBrush x:Key="ImageCropperThumbnailBorderHoverBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ImageCropperThumbnailBackgroundBrush" Color="{StaticResource BackgroundTertiaryColor}" />
    <SolidColorBrush x:Key="ProfileImageBorderBrush" Color="{StaticResource WhiteColor}" />
    
    <!-- Action button brushes using only 7 core colors -->
    <SolidColorBrush x:Key="ActionBlueBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ActionBlueLightBrush" Color="{StaticResource BackgroundTertiaryColor}" />
    <SolidColorBrush x:Key="ActionRedBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="ActionRedLightBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    
    <!-- Button brushes for consistent styling -->
    <SolidColorBrush x:Key="AccentButtonBackground" Color="{StaticResource AccentButtonBackgroundColor}" />
    <SolidColorBrush x:Key="AccentButtonBackgroundHover" Color="{StaticResource AccentButtonBackgroundHoverColor}" />
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlueColor}" />

</ResourceDictionary>
