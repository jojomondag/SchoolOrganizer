<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SchoolOrganizer.ViewModels"
        xmlns:components="using:SchoolOrganizer.Views.Components"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="SchoolOrganizer.Views.AssignmentManagement.AssignmentViewer"
        x:DataType="vm:StudentDetailViewModel"
        Title="{Binding WindowTitle}"
        Width="1000" Height="600"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen">

  <Design.DataContext>
    <vm:StudentDetailViewModel/>
  </Design.DataContext>

  <Grid Name="MainGrid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="300" MinWidth="250"/>
      <ColumnDefinition Width="12"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- File Explorer (Left Panel) -->
    <Border Grid.Column="0" 
            Name="ExplorerPanel"
            Background="{DynamicResource BackgroundSecondaryBrush}" 
            RenderTransformOrigin="0,0">
      <Border.RenderTransform>
        <TranslateTransform X="0"/>
      </Border.RenderTransform>
      
      <TreeView ItemsSource="{Binding FileTree}"
                SelectionChanged="OnTreeViewSelectionChanged"
                Margin="5">
        <TreeView.ItemTemplate>
          <TreeDataTemplate ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Name}" Margin="2"/>
          </TreeDataTemplate>
        </TreeView.ItemTemplate>
      </TreeView>
    </Border>

    <!-- Main Content Panel -->
    <Border Grid.Column="2" 
            Name="MainContentPanel" 
            Background="{DynamicResource BackgroundPrimaryBrush}">
      <ScrollViewer Name="MainScrollViewer"
                    VerticalScrollBarVisibility="Auto" 
                    HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding AllFilesGrouped}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Background="{DynamicResource BackgroundTertiaryBrush}" 
                      Margin="0,0,0,0">
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>
                  
                  <!-- Assignment Header -->
                  <Border Grid.Row="0" 
                          x:Name="AssignmentHeaderBorder"
                          Background="{DynamicResource BackgroundSecondaryBrush}" 
                          Padding="15">
                    <TextBlock Text="{Binding AssignmentName}" 
                               FontWeight="Bold" 
                               FontSize="18"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                  </Border>
                  
                  <!-- Assignment Files -->
                  <ItemsControl Grid.Row="1" ItemsSource="{Binding Files}">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate>
                        <components:FilePreviewControl/>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>

    <!-- Custom Fold Button Separator -->
    <Border Grid.Column="1" 
            Name="SeparatorPanel"
            Background="{DynamicResource BackgroundSecondaryBrush}">
      <Button Name="SeparatorToggleButton"
              Click="OnToggleExplorerClick"
              Background="White"
              Padding="0"
              Margin="0"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              CornerRadius="0">
        <TextBlock Text="â€¹" 
                   FontSize="10" 
                   FontWeight="Bold" 
                   Foreground="Black" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
      </Button>
    </Border>
  </Grid>
</Window>
