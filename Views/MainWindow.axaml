<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SchoolOrganizer.ViewModels"
        xmlns:views="using:SchoolOrganizer.Views"
        xmlns:studentGallery="using:SchoolOrganizer.Views.StudentGallery"
        xmlns:classroomDownload="using:SchoolOrganizer.Views.ClassroomDownload"
        xmlns:materialIcons="using:Material.Icons.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SchoolOrganizer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.ico"
        Title="School Organizer"
        Width="2390"
        Height="900"
        MinWidth="800"
        MinHeight="600">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

        <Window.Styles>
        <Style Selector="ComboBox:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource TextSecondaryColor}"/>
        </Style>
        <Style Selector="DatePicker:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource TextSecondaryColor}"/>
        </Style>
    </Window.Styles>

    <SplitView IsPaneOpen="{Binding IsMenuOpen}" 
               DisplayMode="CompactInline" 
               OpenPaneLength="200" 
               CompactPaneLength="56">
        <SplitView.Pane>
            <!-- Navigation Menu -->
            <Border Background="{DynamicResource BackgroundSecondaryColor}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- Navigation items -->
                        <RowDefinition Height="Auto"/> <!-- Profile at bottom -->
                    </Grid.RowDefinitions>

                    <!-- Header with hamburger button and title -->
                    <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="16,10,16,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Hamburger Menu Button -->
                            <Button Grid.Column="0" Command="{Binding ToggleMenuCommand}" 
                                    Width="32" Height="32" Margin="0,0,8,0"
                                    Background="Transparent" BorderThickness="0">
                                <materialIcons:MaterialIcon Kind="Menu" Width="20" Height="20"/>
                            </Button>

                            <!-- App Title (when menu is open) -->
                            <TextBlock Grid.Column="1" Text="School Organizer" 
                                      VerticalAlignment="Center" FontWeight="Bold"
                                      IsVisible="{Binding IsMenuOpen}"/>
                        </Grid>
                    </Border>

                    <!-- Navigation Items -->
                    <StackPanel Grid.Row="1" Margin="8,16,8,8" Spacing="4">
                        <!-- Student Gallery -->
                        <Button Command="{Binding NavigateToStudentGalleryCommand}"
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Left"
                                Padding="12,8"
                                Background="Transparent"
                                BorderThickness="0"
                                CornerRadius="4">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <materialIcons:MaterialIcon Kind="AccountGroupOutline" Width="20" Height="20"/>
                                    <TextBlock Text="Student Gallery" VerticalAlignment="Center" 
                                              IsVisible="{Binding IsMenuOpen}"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- Classroom Downloads -->
                        <Button Command="{Binding NavigateToClassroomDownloadCommand}"
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Left"
                                Padding="12,8"
                                Background="Transparent"
                                BorderThickness="0"
                                CornerRadius="4">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <materialIcons:MaterialIcon Kind="Download" Width="20" Height="20"/>
                                    <TextBlock Text="Classroom Downloads" VerticalAlignment="Center" 
                                              IsVisible="{Binding IsMenuOpen}"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <!-- Profile/Login at Bottom -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0" Padding="8">
                        <StackPanel Spacing="4">
                            <!-- Profile Picture Button (Logout when authenticated) -->
                            <Button Command="{Binding LogoutCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Padding="12,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="4"
                                    IsVisible="{Binding IsAuthenticated}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border CornerRadius="4" ClipToBounds="True" Width="40" Height="40">
                                            <Image Source="{Binding ProfileImage}" Stretch="UniformToFill" Width="40" Height="40" IsHitTestVisible="False"/>
                                        </Border>
                                        <TextBlock Text="{Binding TeacherName}" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                                <ToolTip.Tip>
                                    <ToolTip Content="Log out" />
                                </ToolTip.Tip>
                            </Button>

                            <!-- Login Button (when not authenticated) -->
                            <Button Command="{Binding LoginCommand}"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Padding="12,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="4"
                                    IsVisible="{Binding !IsAuthenticated}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border CornerRadius="4" ClipToBounds="True" Width="20" Height="20" Background="{DynamicResource BackgroundTertiaryBrush}">
                                            <Image Source="{SvgImage avares://SchoolOrganizer/Assets/ClassroomIcon.svg}" Width="16" Height="16" Stretch="Uniform" IsHitTestVisible="False"/>
                                        </Border>
                                        <TextBlock Text="Login" VerticalAlignment="Center" 
                                                  IsVisible="{Binding IsMenuOpen}"/>
                                    </StackPanel>
                                </Button.Content>
                                <ToolTip.Tip>
                                    <ToolTip Content="Login with Google to access your profile" />
                                </ToolTip.Tip>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </SplitView.Pane>

        <SplitView.Content>
            <!-- Main Content Area -->
            <Border Background="White">
            <ContentControl Content="{Binding CurrentViewModel}">
                <ContentControl.DataTemplates>
                <!-- Template for StudentGalleryViewModel -->
                    <DataTemplate DataType="vm:StudentGalleryViewModel">
                        <studentGallery:StudentGalleryView/>
                    </DataTemplate>

                <!-- Template for ClassroomDownloadViewModel -->
                    <DataTemplate DataType="vm:ClassroomDownloadViewModel">
                        <classroomDownload:ClassroomDownloadView/>
                    </DataTemplate>

                </ContentControl.DataTemplates>
            </ContentControl>
            </Border>
        </SplitView.Content>
    </SplitView>

</Window>
