<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolOrganizer.Views.ProfileCard"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             x:Class="SchoolOrganizer.Views.ProfileCard.AddStudentProfileCardLarge"
             x:DataType="local:AddStudentProfileCardLarge">

  <Border x:Name="CardBorder"
          Background="{DynamicResource BackgroundPrimaryBrush}"
          CornerRadius="16"
          BorderBrush="{DynamicResource BlackBrush}"
          BorderThickness="1"
          Padding="24"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Cursor="Hand"
          BoxShadow="{DynamicResource ShadowLight}"
          RenderTransformOrigin="0.5,0.5">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
      <!-- Plus Icon Circle -->
      <Border x:Name="AddIconBorder"
              Background="{DynamicResource BackgroundTertiaryBrush}"
              CornerRadius="60"
              BorderThickness="3"
              BorderBrush="{DynamicResource BlackBrush}"
              Padding="0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="120"
              Height="120"
              Cursor="Hand">

        <Viewbox HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 Width="60" Height="60">
          <materialIcons:MaterialIcon Kind="Plus" 
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
        </Viewbox>
      </Border>

      <!-- Add Student Text -->
      <TextBlock x:Name="AddStudentText"
                 Text="Add Student"
                 FontSize="18"
                 FontWeight="Bold"
                 Foreground="{DynamicResource TextPrimaryBrush}"
                 TextAlignment="Center"
                 TextTrimming="CharacterEllipsis" />

      <!-- Subtitle Text -->
      <TextBlock x:Name="SubtitleText"
                 Text="Click to add a new student to the gallery"
                 FontSize="12"
                 Foreground="{DynamicResource TextSecondaryBrush}"
                 TextAlignment="Center"
                 TextTrimming="CharacterEllipsis" />
    </StackPanel>
  </Border>
</UserControl>
