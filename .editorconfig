root = true

[*.cs]
# Suppress specific debugging warnings
dotnet_diagnostic.CS8019.severity = none
dotnet_diagnostic.CA1416.severity = none

# Code style rules
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{axaml,xaml}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
